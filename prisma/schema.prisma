generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String  @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        String  @id @default(cuid())
  tenant_id String
  email     String  @unique
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@index([tenant_id])
}
