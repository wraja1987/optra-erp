{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["jest", "react", "react-native", "node"],
    "baseUrl": ".",
    "paths": {
      "@nexa/registry": ["../../packages/registry/src"],
      "@nexa/registry/*": ["../../packages/registry/src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}



