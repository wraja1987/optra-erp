{
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "ES2021"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@v5/core": [
        "packages/core/src"
      ],
      "@v5/schemas": [
        "packages/schemas/src"
      ],
      "@v5/ui": [
        "packages/ui/src"
      ]
    }
  },
  "include": [
    "node_modules/typescript/lib/lib.es2021.d.ts"
  ]
}